generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POOLED_DB_URL") // uses connection pooling
  directUrl = env("DIRECT_DB_URL") // uses a direct connection
}

model User {
  id String @id @unique @default(uuid())
  clerkId String @unique
  email String @unique
  username String @unique
  photo String
  firstName String?
  lastName String?
  planId Int? @default(1)
  creditBalance Int? @default(10)
  transactions Transaction[]
  images Image[]
}

model Transaction {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  stripeId String @unique
  amount Int?
  plan String?
  credits Int?
  buyer User? @relation(fields: [userId], references: [id])
  userId String?

}

model Image {
  id             String       @id @default(uuid())
  title          String    @db.VarChar(255)
  transformationType String @db.VarChar(255)
  publicId       String    @db.VarChar(255)
  secureURL      String    @db.VarChar(255)
  width          Int?
  height         Int?
  config         Json?
  transformationUrl String?
  aspectRatio    String?
  color          String?
  prompt         String?
  author         User?      @relation(fields: [authorId], references: [id])
  authorId       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
